<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700" id="<%= dom_id league %>">
  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= league.name %></th>
  <td class="px-6 py-4">
    <%= league.description %>
  </td>
  <td class="px-6 py-4">
    <%= link_to "Edit", edit_league_path(league), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
  </td>
</tr>