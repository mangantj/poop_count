<div class="flex justify-center w-full mb-5">
  <%= image_tag 'poop.svg', class: "h-8 inline-block pr-2"  %>
  <div class="font-bold text-2xl text-brown">Poop Count</div>
</div>

<%# <div class="max-w-sm mx-auto block mb-2 text-lg font-medium text-gray-900">Log in</div> %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-sm mx-auto" }) do |f| %>
  <div class="mb-5">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="mb-5">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "label inline-block" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-primary" %>
  </div>
<% end %>

<div class="max-w-sm mx-auto mt-5">
  <%= render "users/shared/links" %>
</div>
